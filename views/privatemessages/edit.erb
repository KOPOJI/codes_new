<!DOCTYPE html>
<%#include "privatemessages.h" %>
<% tfetch(QVariantMap, privateMessages); %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Private Messages</h1>

<%== formTag(urla("save", privateMessages["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="privateMessages[id]" value="<%= privateMessages["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>User from ID<br /><input type="text" name="privateMessages[userFromId]" value="<%= privateMessages["userFromId"] %>" /></label>
  </p>
  <p>
    <label>User to ID<br /><input type="text" name="privateMessages[userToId]" value="<%= privateMessages["userToId"] %>" /></label>
  </p>
  <p>
    <label>Title<br /><input type="text" name="privateMessages[title]" value="<%= privateMessages["title"] %>" /></label>
  </p>
  <p>
    <label>Text<br /><input type="text" name="privateMessages[text]" value="<%= privateMessages["text"] %>" /></label>
  </p>
  <p>
    <label>File<br /><input type="text" name="privateMessages[file]" value="<%= privateMessages["file"] %>" /></label>
  </p>
  <p>
    <label>Deleted by from User<br /><input type="text" name="privateMessages[deletedByFromUser]" value="<%= privateMessages["deletedByFromUser"] %>" /></label>
  </p>
  <p>
    <label>Deleted by to User<br /><input type="text" name="privateMessages[deletedByToUser]" value="<%= privateMessages["deletedByToUser"] %>" /></label>
  </p>
  <p>
    <label>Read<br /><input type="text" name="privateMessages[read]" value="<%= privateMessages["read"] %>" /></label>
  </p>
  <p>
    <label>To Message ID<br /><input type="text" name="privateMessages[toMessageId]" value="<%= privateMessages["toMessageId"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Update" />
  </p>
</form>

<%== linkTo("Show", urla("show", privateMessages["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
